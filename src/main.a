
print "[CONSOLE_OS] Console OS 1.0\n";

import paths.a
import theme.a
import user.a
import input.a
import page.a
import desktop.a

import lib/video.a
import lib/events.a

var events = new(Events);
console_pages_setup_show();

var ticks = 0;

loop {
	if ((ticks = ticks + 1) < 20) {
		Video.flip();
		continue
	}
	
	var fps = Video.fps() + 1;
	
	Video.clear 0, 0, 0, 0;
	
	draw_desktop fps;
	console_theme_update fps;
	
	Video.flip();
	
	events.get();
	if (events.quit) break
}
